<item name="arrow_upward_animation" xmlns="http://schemas.android.com/repository/android/sites-common/1">
    <objectAnimator

        android:propertyName="translationY"
        android:duration="500"
        android:valueFrom="0"
        android:valueTo="-200"
        android:interpolator="@android:interpolator/accelerate_decelerate" />
</item>
<item name="arrow_downward_animation">
<objectAnimator
    android:propertyName="translationY"
    android:duration="500"
    android:valueFrom="0"
    android:valueTo="200"
    android:interpolator="@android:interpolator/accelerate_decelerate" />
</item>
<item name="arrow_swipe_animation">
<objectAnimator
    android:propertyName="translationX"
    android:duration="500"
    android:valueFrom="0"
    android:valueTo="200"
    android:interpolator="@android:interpolator/accelerate_decelerate" />
</item>